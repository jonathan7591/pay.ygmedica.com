{
    "steps": [
        "主体信息",
        "经营信息",
        "结算账户"
    ],
    "items": [
        [
            {
                "name": "uid",
                "type": "input",
                "label": "绑定本站用户ID",
                "placeholder": "可留空"
            },
            {
                "name": "order_id",
                "type": "hidden",
                "label": "申请单编号"
            },
            {
                "type": "line",
                "content": "基础信息"
            },
            {
                "name": "organization_type",
                "type": "radio",
                "label": "主体类型",
                "value": "2401",
                "options": [
                    {
                        "label": "小微商户",
                        "value": "2401",
                        "tip":"指无营业执照的个人商家"
                    },
                    {
                        "label": "个人卖家",
                        "value": "2500",
                        "tip":"指无营业执照，已持续从事电子商务经营活动满6个月，且期间经营收入累计超过20万元的个人商家"
                    },
                    {
                        "label": "个体工商户",
                        "value": "4"
                    },
                    {
                        "label": "企业",
                        "value": "2"
                    }
                ],
                "required": true
            },
            {
                "name": "mobile_phone",
                "type": "input",
                "label": "手机号码",
                "validator": "phone",
                "placeholder": "用于接收微信支付的重要管理信息及日常操作验证码",
                "required": true
            },
            {
                "name": "contact_email",
                "type": "input",
                "label": "电子邮箱",
                "validator": "email",
                "placeholder": "用于接收微信支付的开户邮件及日常业务通知",
                "required": true
            },
            {
                "type": "line",
                "content": "营业执照",
                "show":"organization_type=='4'||organization_type=='2'"
            },
            {
                "name": "business_license_copy",
                "type": "image-upload",
                "label": "营业执照照片",
                "tip": "请上传“营业执照”，需年检章齐全，当年注册除外",
                "filesize": 2,
                "filetype": "business",
                "autofill": {
                    "business_license_number": "license_no",
                    "merchant_name": "name",
                    "id_card_name": "legal_name"
                },
                "show":"organization_type=='4'||organization_type=='2'",
                "required": true
            },
            {
                "name": "business_license_number",
                "type": "input",
                "label": "营业执照编号",
                "placeholder": "上传营业执照后自动填入",
                "show":"organization_type=='4'||organization_type=='2'",
                "required": true
            },
            {
                "name": "merchant_name",
                "type": "input",
                "label": "营业执照名称",
                "placeholder": "上传营业执照后自动填入",
                "show":"organization_type=='4'||organization_type=='2'",
                "required": true
            },
            {
                "type": "line",
                "content": "经营者/法人信息"
            },
            {
                "name": "id_card_copy",
                "type": "image-upload",
                "label": "身份证人像面照片",
                "filesize": 2,
                "filetype": "idcard",
                "autofill": {
                    "id_card_number": "id_no",
                    "id_card_name": "name",
                    "id_card_address": "address"
                },
                "tip": "请上传经营者/法人的身份证人像面照片",
                "required": true
            },
            {
                "name": "id_card_national",
                "type": "image-upload",
                "label": "身份证国徽面照片",
                "filesize": 2,
                "filetype": "idcard_back",
                "autofill": {
                    "id_card_valid_time_begin": "period_begin",
                    "id_card_valid_time": "period_end"
                },
                "tip": "请上传经营者/法人的身份证国徽面照片",
                "required": true
            },
            {
                "name": "id_card_name",
                "type": "input",
                "label": "身份证姓名",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            },
            {
                "name": "id_card_number",
                "type": "input",
                "label": "身份证号码",
                "validator": "id",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            },
            {
                "name": "id_card_address",
                "type": "input",
                "label": "身份证居住地址",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            },
            {
                "name": "id_card_valid_time_begin",
                "type": "date",
                "label": "身份证有效期开始时间",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            },
            {
                "name": "id_card_valid_time",
                "type": "date",
                "label": "身份证有效期结束时间",
                "placeholder": "上传身份证照片后自动填入",
                "longterm": true,
                "required": true
            }
        ],
        [
            {
                "name": "merchant_shortname",
                "type": "input",
                "label": "商户简称",
                "placeholder": "在支付完成页向买家展示，需与微信经营类目相关",
                "required": true
            },
            {
                "name": "store_name",
                "type": "input",
                "label": "店铺名称",
                "placeholder": "请填写店铺全称",
                "required": true
            },
            {
                "name": "store_url",
                "type": "input",
                "label": "店铺链接",
                "validator": "uri",
                "placeholder": "请填写店铺主页链接，需符合网站规范",
                "tip":"店铺链接or店铺二维码二选一必填"
            },
            {
                "name": "store_qr_code",
                "type": "image-upload",
                "label": "店铺二维码",
                "filesize": 2,
                "note":"若为电商小程序，可上传店铺页面的小程序二维码",
                "tip":"店铺链接or店铺二维码二选一必填"
            }
        ],
        [
            {
                "name": "bank_account_type",
                "type": "radio",
                "label": "银行账户类型",
                "value": "75",
                "options": [
                    {
                        "label": "对公银行账户",
                        "value": "74",
                        "show": "organization_type=='4'||organization_type=='2'"
                    },
                    {
                        "label": "经营者个人银行卡",
                        "value": "75",
                        "show": "organization_type=='2401'||organization_type=='2500'||organization_type=='4'"
                    }
                ],
                "required": true
            },
            {
                "name": "account_name",
                "type": "input",
                "label": "开户名称",
                "placeholder": "开户名称需与主体或法人一致",
                "required": true
            },
            {
                "name": "account_bank",
                "type": "hidden",
                "label": "开户银行(含其他银行)"
            },
            {
                "name": "need_bank_branch",
                "type": "hidden",
                "value": false,
                "label": "是否需要填写支行信息"
            },
            {
                "name": "city_code",
                "type": "hidden",
                "label": "开户银行城市编码"
            },
            {
                "name": "bank_code",
                "type": "bank-select",
                "label": "开户银行",
                "placeholder": "请选择开户银行",
                "autofill": {
                    "account_bank": "account_bank",
                    "need_bank_branch": "need_bank_branch"
                },
                "required": true
            },
            {
                "name": "bank_address_code",
                "type": "cascader",
                "label": "开户银行省市",
                "options": "${city}",
                "autofill": {
                    "city_code": "code"
                },
                "required": true
            },
            {
                "name": "bank_branch_id",
                "type": "bank-branch-select",
                "label": "开户银行支行",
                "placeholder": "请选择支行",
                "show": "need_bank_branch",
                "param": {
                    "bank_code": "bank_code",
                    "city_code": "city_code"
                },
                "required": true
            },
            {
                "name": "account_number",
                "type": "input",
                "label": "银行账号",
                "placeholder": "",
                "required": true
            }
        ]
    ]
}