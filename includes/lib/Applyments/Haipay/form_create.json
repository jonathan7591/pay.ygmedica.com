{
    "steps": [
        "主体信息",
        "经营信息",
        "结算账户"
    ],
    "items": [
        [
            {
                "name": "uid",
                "type": "input",
                "label": "绑定本站用户ID",
                "placeholder": "可留空"
            },
            {
                "name": "order_id",
                "type": "hidden",
                "label": "申请单编号"
            },
            {
                "name": "mch_id",
                "type": "hidden",
                "label": "商户编号"
            },
            {
                "type": "line",
                "content": "基础信息"
            },
            {
                "name": "merchant_type",
                "type": "radio",
                "label": "商户类型",
                "value": "3",
                "options": [
                    {
                        "label": "小微商户",
                        "value": "1"
                    },
                    {
                        "label": "个体工商户",
                        "value": "2"
                    },
                    {
                        "label": "企业",
                        "value": "3"
                    }
                ],
                "required": true
            },
            {
                "name": "contact_phone",
                "type": "input",
                "label": "联系人手机号",
                "validator": "phone",
                "placeholder": "用户后续合同签约、账户验证等",
                "required": true
            },
            {
                "name": "contact_email",
                "type": "input",
                "label": "联系人邮箱",
                "validator": "email",
                "placeholder": "",
                "required": true
            },
            {
                "type": "line",
                "content": "营业执照",
                "show": "merchant_type>1"
            },
            {
                "name": "license_image",
                "type": "image-upload",
                "label": "营业执照照片",
                "filesize": 2,
                "filetype": "business",
                "autofill": {
                    "license_no": "license_no",
                    "merchant_name": "name",
                    "idcard_name": "legal_name",
                    "license_address": "address",
                    "shop_address_detail": "address",
                    "license_period_begin": "period_begin",
                    "license_period_end": "period_end"
                },
                "required": true,
                "show": "merchant_type>1"
            },
            {
                "name": "license_no",
                "type": "input",
                "label": "营业执照编号",
                "placeholder": "上传营业执照后自动填入",
                "required": true,
                "show": "merchant_type>1"
            },
            {
                "name": "merchant_name",
                "type": "input",
                "label": "营业执照名称",
                "placeholder": "上传营业执照后自动填入",
                "required": true,
                "show": "merchant_type>1"
            },
            {
                "name": "license_address",
                "type": "input",
                "label": "营业执照经营地址",
                "placeholder": "上传营业执照后自动填入",
                "required": true,
                "show": "merchant_type>1"
            },
            {
                "name": "license_period_begin",
                "type": "date",
                "label": "营业执照有效期开始时间",
                "placeholder": "上传营业执照后自动填入",
                "required": true,
                "show": "merchant_type>1"
            },
            {
                "name": "license_period_end",
                "type": "date",
                "label": "营业执照有效期结束时间",
                "placeholder": "上传营业执照后自动填入",
                "longterm": true,
                "required": true,
                "show": "merchant_type>1"
            },
            {
                "type": "line",
                "content": "法人信息"
            },
            {
                "name": "idcard_image",
                "type": "image-upload",
                "label": "身份证人像面照片",
                "filesize": 2,
                "filetype": "idcard",
                "autofill": {
                    "idcard_no": "id_no",
                    "idcard_name": "name",
                    "idcard_address": "address"
                },
                "tip": "请上传法人的身份证人像面照片",
                "required": true
            },
            {
                "name": "idcard_back_image",
                "type": "image-upload",
                "label": "身份证国徽面照片",
                "filesize": 2,
                "filetype": "idcard_back",
                "autofill": {
                    "idcard_period_begin": "period_begin",
                    "idcard_period_end": "period_end"
                },
                "tip": "请上传法人的身份证国徽面照片",
                "required": true
            },
            {
                "name": "idcard_name",
                "type": "input",
                "label": "身份证姓名",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            },
            {
                "name": "idcard_no",
                "type": "input",
                "label": "身份证号码",
                "validator": "id",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            },
            {
                "name": "idcard_period_begin",
                "type": "date",
                "label": "身份证有效期开始时间",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            },
            {
                "name": "idcard_period_end",
                "type": "date",
                "label": "身份证有效期结束时间",
                "placeholder": "上传身份证照片后自动填入",
                "longterm": true,
                "required": true
            },
            {
                "name": "idcard_address",
                "type": "input",
                "label": "身份证地址",
                "placeholder": "上传身份证照片后自动填入",
                "required": true
            }
        ],
        [
            {
                "type": "line",
                "content": "基础信息"
            },
            {
                "name": "mcc",
                "type": "cascader",
                "label": "经营类目",
                "options": "${mcc}",
                "required": true
            },
            {
                "name": "short_name",
                "type": "input",
                "label": "商户简称",
                "placeholder": "在支付账单页向买家展示",
                "required": true
            },
            {
                "type": "line",
                "content": "经营场所信息"
            },
            {
                "name": "shop_name",
                "type": "input",
                "label": "门店名称",
                "placeholder": "商户门头名称",
                "required": true
            },
            {
                "name": "shop_address",
                "type": "inputcity",
                "label": "经营场所省市县",
                "required": true,
                "allnode": true,
                "autofill": {
                    "shop_address_name": "label"
                }
            },
            {
                "name": "shop_address_name",
                "type": "hidden",
                "label": "经营场所省市县名称"
            },
            {
                "name": "shop_address_detail",
                "type": "input",
                "label": "经营场所地址",
                "placeholder": "请填写经营场所的详细地址",
                "required": true
            },
            {
                "name": "shop_entrance_pic",
                "type": "image-upload",
                "label": "经营场所门头照片",
                "filesize": 2,
                "tip": "门店招牌清晰、招牌名称、文字可辨识、门框完整，且店面显示在营",
                "required": true
            },
            {
                "name": "shop_indoor_pic",
                "type": "image-upload",
                "label": "营业场所室内照片",
                "filesize": 2,
                "tip": "能够展示内部环境并能辨识所经营的业务、销售商品/服务",
                "required": true
            },
            {
                "name": "shop_indoor_pic2",
                "type": "image-upload",
                "label": "营业场所室内照片2",
                "filesize": 2,
                "tip": "能够展示内部环境并能辨识所经营的业务、销售商品/服务",
                "required": true
            }
        ],
        [
            {
                "type": "line",
                "content": "结算银行账户"
            },
            {
                "name": "card_type",
                "type": "radio",
                "label": "银行账户类型",
                "value": "0",
                "options": [
                    {
                        "label": "对公账户",
                        "value": "0"
                    },
                    {
                        "label": "对私法人账户",
                        "value": "1"
                    },
                    {
                        "label": "对私非法人账户",
                        "value": "2"
                    }
                ],
                "show": "merchant_type>1",
                "required": true
            },
            {
                "name": "bank_card_image",
                "type": "image-upload",
                "label": "银行卡正面照片",
                "tip": "请上传结算银行卡的卡号面照片",
                "filesize": 2,
                "filetype": "bankcard",
                "autofill": {
                    "card_no": "card_no"
                },
                "required": true,
                "show": "merchant_type==1||card_type>0"
            },
            {
                "name": "bank_license_image",
                "type": "image-upload",
                "label": "对公账户开户许可证",
                "tip": "对公结算必填",
                "filesize": 2,
                "filetype": "bankaccount",
                "autofill": {
                    "card_no": "bank_account"
                },
                "required": true,
                "show": "merchant_type>1&&card_type==0"
            },
            {
                "name": "card_name",
                "type": "input",
                "label": "银行账户名",
                "placeholder": "需与企业名称或法人姓名一致",
                "required": true
            },
            {
                "name": "card_no",
                "type": "input",
                "label": "银行卡号",
                "placeholder": "",
                "required": true
            },
            {
                "name": "bank_code",
                "type": "bank-select",
                "label": "开户银行",
                "placeholder": "请选择开户银行",
                "required": true
            },
            {
                "name": "bank_address",
                "type": "cascader",
                "label": "开户银行省市",
                "options": "${city}",
                "required": true,
                "allnode": true
            },
            {
                "name": "bank_branch_name",
                "type": "hidden",
                "label": "开户银行支行名称"
            },
            {
                "name": "bank_branch_code",
                "type": "bank-branch-select",
                "label": "开户银行支行",
                "placeholder": "请选择支行",
                "param": {
                    "bank_code": "bank_code",
                    "city_code": "bank_address"
                },
                "autofill": {
                    "bank_branch_name": "text"
                },
                "required": true
            },
            {
                "name": "bank_phone",
                "type": "input",
                "label": "银行卡绑定手机号",
                "validator": "phone",
                "placeholder": "",
                "show": "merchant_type==1||card_type>0",
                "required": true
            },
            {
                "type": "line",
                "content": "持卡人信息",
                "show": "card_type==2"
            },
            {
                "name": "auth_idcard_image",
                "type": "image-upload",
                "label": "持卡人身份证人像面照片",
                "filesize": 2,
                "filetype": "idcard",
                "autofill": {
                    "auth_idcard_no": "id_no",
                    "card_name": "name"
                },
                "tip": "请上传持卡人的身份证人像面照片",
                "required": true,
                "show": "card_type==2"
            },
            {
                "name": "auth_idcard_back_image",
                "type": "image-upload",
                "label": "持卡人身份证国徽面照片",
                "filesize": 2,
                "filetype": "idcard_back",
                "tip": "请上传持卡人的身份证国徽面照片",
                "required": true,
                "show": "card_type==2"
            },
            {
                "name": "auth_idcard_no",
                "type": "input",
                "label": "持卡人身份证号码",
                "validator": "id",
                "placeholder": "上传身份证照片后自动填入",
                "required": true,
                "show": "card_type==2"
            },
            {
                "name": "settle_auth_image",
                "type": "image-upload",
                "label": "非法人结算授权函图片",
                "tip": "对私非法人结算时必填",
                "filesize": 2,
                "note": "请下载<a href=\"/assets/files/haipay/%E9%9D%9E%E6%B3%95%E4%BA%BA%E7%BB%93%E7%AE%97%E6%8E%88%E6%9D%83%E5%87%BD%E6%A8%A1%E6%9D%BF.docx\" target=\"_blank\">非法人结算授权函模板</a>，填写并盖章后，拍照上传",
                "required": true,
                "show": "card_type==2"
            },
            {
                "name": "settle_auth_hold_image",
                "type": "image-upload",
                "label": "法人手持结算授权函合影图片",
                "tip": "对私非法人结算时必填",
                "filesize": 2,
                "required": true,
                "show": "card_type==2"
            }
        ]
    ]
}