{
    "steps": [
        "结算账户"
    ],
    "items": [
        [
            {
                "name": "merchant_type",
                "type": "hidden",
                "label": "主体类型"
            },
            {
                "type": "line",
                "content": "结算银行账户"
            },
            {
                "name": "settle_account_type",
                "type": "radio",
                "label": "银行账户类型",
                "value": "1",
                "options": [
                    {
                        "label": "对公银行账户",
                        "value": "0",
                        "show": "merchant_type==3"
                    },
                    {
                        "label": "法人个人银行卡",
                        "value": "1"
                    },
                    {
                        "label": "授权人银行卡",
                        "value": "2",
                        "show": "merchant_type>1"
                    }
                ],
                "required": true
            },
            {
                "name": "account_name",
                "type": "input",
                "label": "开户名称",
                "placeholder": "开户名称需与主体或法人一致",
                "required": true
            },
            {
                "name": "account_number",
                "type": "input",
                "label": "银行卡号",
                "placeholder": "",
                "required": true
            },
            {
                "name": "bank_name",
                "type": "hidden",
                "label": "开户银行名称"
            },
            {
                "name": "bank_code",
                "type": "bank-select",
                "label": "开户银行",
                "placeholder": "请选择开户银行",
                "autofill": {
                    "bank_name": "text"
                },
                "required": true
            },
            {
                "name": "bank_address",
                "type": "cascader",
                "label": "开户银行省市",
                "options": "${city}",
                "required": true
            },
            {
                "name": "bank_branch_name",
                "type": "hidden",
                "label": "开户银行支行名称"
            },
            {
                "name": "bank_branch_id",
                "type": "bank-branch-select",
                "label": "开户银行支行",
                "placeholder": "请选择支行",
                "param": {
                    "bank_code": "bank_code",
                    "city_code": "bank_address"
                },
                "autofill": {
                    "bank_branch_name": "text"
                },
                "required": true
            },
            {
                "name": "bank_phone",
                "type": "input",
                "label": "银行预留手机号",
                "validator": "phone",
                "placeholder": "",
                "required": true,
                "show": "settle_account_type>0"
            },
            {
                "name": "bank_card_image",
                "type": "image-upload",
                "label": "银行卡正面照片",
                "tip": "请上传结算银行卡的正面照片",
                "filesize": 2,
                "filetype": "bankcard",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "type": "line",
                "content": "授权人信息",
                "show": "settle_account_type==2"
            },
            {
                "name": "auth_idcard_image",
                "type": "image-upload",
                "label": "授权人身份证人像面照片",
                "filesize": 2,
                "filetype": "idcard",
                "autofill": {
                    "auth_idcard_no": "id_no",
                    "auth_idcard_name": "name"
                },
                "tip": "请上传授权人的身份证人像面照片",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "auth_idcard_back_image",
                "type": "image-upload",
                "label": "授权人身份证国徽面照片",
                "filesize": 2,
                "filetype": "idcard_back",
                "autofill": {
                    "auth_idcard_period_begin": "period_begin",
                    "auth_idcard_period_end": "period_end"
                },
                "tip": "请上传授权人的身份证国徽面照片",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "auth_idcard_name",
                "type": "input",
                "label": "授权人身份证姓名",
                "placeholder": "上传身份证照片后自动填入",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "auth_idcard_no",
                "type": "input",
                "label": "授权人身份证号码",
                "validator": "id",
                "placeholder": "上传身份证照片后自动填入",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "auth_idcard_period_begin",
                "type": "date",
                "label": "授权人身份证有效期开始",
                "placeholder": "上传身份证照片后自动填入",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "auth_idcard_period_end",
                "type": "date",
                "label": "授权人身份证有效期结束",
                "placeholder": "上传身份证照片后自动填入",
                "longterm": true,
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "type": "line",
                "content": "开户凭证",
                "show": "merchant_type==3"
            },
            {
                "name": "bank_license_image",
                "type": "image-upload",
                "label": "开户凭证照片",
                "note": "开户凭证可以是：开户许可证、印鉴卡、网银截图、电子回单或机打银行流水，需体现开户名称、银行账号和开户行名称",
                "filesize": 2,
                "required": true,
                "show": "merchant_type==3"
            },
            {
                "type": "line",
                "content": "结算规则设置"
            },
            {
                "name": "is_holiday_settle",
                "type": "radio",
                "label": "是否开通节假日出款",
                "value": "1",
                "options": [
                    {
                        "label": "否",
                        "value": "0"
                    },
                    {
                        "label": "是",
                        "value": "1"
                    }
                ],
                "required": true
            },
            {
                "name": "holiday_settle_rate",
                "type": "input",
                "label": "节假日出款费率(%)",
                "validator": "numeric",
                "value": "0",
                "min": "0",
                "max": "1.0",
                "placeholder": "仅能填入2位以内小数",
                "required": true
            },
            {
                "name": "dire_pay_fee",
                "type": "input",
                "label": "工作日出款手续费(元/笔)",
                "validator": "numeric",
                "value": "0",
                "min": "0",
                "max": "1.0",
                "placeholder": "仅能填入2位以内小数",
                "required": true
            }
        ]
    ]
}