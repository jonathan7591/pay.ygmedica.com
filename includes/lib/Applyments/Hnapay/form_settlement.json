{
    "steps": [
        "结算账户"
    ],
    "items": [
        [
            {
                "name": "merchant_type",
                "type": "hidden",
                "label": "主体类型"
            },
            {
                "type": "line",
                "content": "结算银行账户"
            },
            {
                "name": "settle_account_type",
                "type": "radio",
                "label": "结算账户类型",
                "value": "2",
                "options": [
                    {
                        "label": "对私",
                        "value": "2"
                    },
                    {
                        "label": "对公",
                        "value": "1",
                        "show": "merchant_type==3"
                    }
                ],
                "required": true
            },
            {
                "name": "settle_account_nature",
                "type": "radio",
                "label": "结算账户性质",
                "value": "1",
                "options": [
                    {
                        "label": "法人账户",
                        "value": "1"
                    },
                    {
                        "label": "非法人账户",
                        "value": "2",
                        "show": "merchant_type!=1"
                    }
                ],
                "show": "settle_account_type==2",
                "required": true
            },
            {
                "name": "account_name",
                "type": "input",
                "label": "开户名称",
                "placeholder": "开户名称需与主体或法人一致",
                "required": true
            },
            {
                "name": "account_number",
                "type": "input",
                "label": "银行卡号",
                "placeholder": "",
                "required": true
            },
            {
                "name": "bank_code",
                "type": "select",
                "label": "开户银行",
                "placeholder": "请选择开户银行",
                "options": "${bank}",
                "required": true
            },
            {
                "name": "bank_address",
                "type": "cascader",
                "label": "开户银行省市",
                "options": "${city}",
                "required": true,
                "allnode": true
            },
            {
                "name": "bank_branch_name",
                "type": "hidden",
                "label": "开户银行支行名称"
            },
            {
                "name": "bank_branch_id",
                "type": "bank-branch-select",
                "label": "开户银行支行",
                "placeholder": "请选择支行",
                "param": {
                    "bank_code": "bank_code",
                    "city_code": "bank_address"
                },
                "autofill": {
                    "bank_branch_name": "text"
                },
                "required": true
            },
            {
                "name": "bank_phone",
                "type": "input",
                "label": "银行预留手机号",
                "validator": "phone",
                "placeholder": "",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "bank_card_image",
                "type": "image-upload",
                "label": "银行卡正面照片",
                "tip": "请上传结算银行卡的卡号面照片",
                "filesize": 2,
                "filetype": "bankcard",
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "bank_license_image",
                "type": "image-upload",
                "label": "对公账户开户许可证",
                "tip": "对公结算必填",
                "filesize": 2,
                "filetype": "bankaccount",
                "required": true,
                "show": "settle_account_type==1"
            },
            {
                "name": "settle_way",
                "type": "radio",
                "label": "结算方式",
                "value": "02",
                "options": [
                    {
                        "label": "T1",
                        "value": "01"
                    },
                    {
                        "label": "D1",
                        "value": "02"
                    }
                ],
                "required": true
            },
            {
                "type": "line",
                "content": "持卡人信息",
                "show": "settle_account_type==2"
            },
            {
                "name": "hold_idcard_image",
                "type": "image-upload",
                "label": "手持身份证（人像面）照片",
                "tip": "对私结算必填",
                "filesize": 2,
                "required": true,
                "show": "settle_account_type==2"
            },
            {
                "name": "auth_idcard_image",
                "type": "image-upload",
                "label": "持卡人身份证人像面照片",
                "filesize": 2,
                "filetype": "idcard",
                "autofill": {
                    "auth_idcard_no": "id_no",
                    "auth_idcard_name": "name"
                },
                "tip": "请上传持卡人的身份证人像面照片",
                "required": true,
                "show": "settle_account_type==2&&settle_account_nature==2"
            },
            {
                "name": "auth_idcard_back_image",
                "type": "image-upload",
                "label": "持卡人身份证国徽面照片",
                "filesize": 2,
                "filetype": "idcard_back",
                "autofill": {
                    "auth_idcard_period_begin": "period_begin",
                    "auth_idcard_period_end": "period_end"
                },
                "tip": "请上传持卡人的身份证国徽面照片",
                "required": true,
                "show": "settle_account_type==2&&settle_account_nature==2"
            },
            {
                "name": "auth_idcard_name",
                "type": "input",
                "label": "持卡人身份证姓名",
                "placeholder": "上传身份证照片后自动填入",
                "required": true,
                "show": "settle_account_type==2&&settle_account_nature==2"
            },
            {
                "name": "auth_idcard_no",
                "type": "input",
                "label": "持卡人身份证号码",
                "validator": "id",
                "placeholder": "上传身份证照片后自动填入",
                "required": true,
                "show": "settle_account_type==2&&settle_account_nature==2"
            },
            {
                "name": "auth_idcard_period_begin",
                "type": "date",
                "label": "持卡人身份证有效期开始",
                "placeholder": "上传身份证照片后自动填入",
                "required": true,
                "show": "settle_account_type==2&&settle_account_nature==2"
            },
            {
                "name": "auth_idcard_period_end",
                "type": "date",
                "label": "持卡人身份证有效期结束",
                "placeholder": "上传身份证照片后自动填入",
                "longterm": true,
                "required": true,
                "show": "settle_account_type==2&&settle_account_nature==2"
            },
            {
                "name": "settle_auth_image",
                "type": "image-upload",
                "label": "结算授权书",
                "tip": "对私非法人结算时必填",
                "filesize": 2,
                "required": true,
                "show": "settle_account_type==2&&settle_account_nature==2"
            },
            {
                "name": "merchant_modify_image",
                "type": "image-upload",
                "label": "商户信息变更申请表",
                "filetype": "18",
                "filesize": 2,
                "note": "请下载<a href=\"/assets/files/hnapay/%E5%95%86%E6%88%B7%E4%BF%A1%E6%81%AF%E5%8F%98%E6%9B%B4%E7%94%B3%E8%AF%B7%E8%A1%A8-%E6%96%B0%E7%94%9F.doc\" target=\"_blank\">商户信息变更申请表</a>，填写并盖章后，拍照上传",
                "required": true
            }
        ]
    ]
}