{
    "steps": [
        "主体信息",
        "经营信息",
        "结算账户"
    ],
    "items": [
        [
            {
                "name": "uid",
                "type": "input",
                "label": "绑定本站用户ID",
                "placeholder": "可留空"
            },
            {
                "name": "order_id",
                "type": "hidden",
                "label": "申请单编号"
            },
            {
                "name": "service",
                "type": "checkboxes",
                "label": "选择开通的服务",
                "options": [
                    {
                        "label": "当面付",
                        "value": "当面付"
                    },
                    {
                        "label": "电脑支付",
                        "value": "电脑支付"
                    },
                    {
                        "label": "WAP支付",
                        "value": "wap支付"
                    },
                    {
                        "label": "APP支付",
                        "value": "app支付"
                    },
                    {
                        "label": "小程序支付",
                        "value": "jsapi支付"
                    }
                ],
                "value": [],
                "tip": "该选项由管理员在后台配置",
                "disabled": true
            },
            {
                "name": "binding_alipay_logon_id",
                "type": "input",
                "label": "签约支付宝账号",
                "placeholder": "与商户主体同名，且已实名认证的支付宝",
                "note": "要求与商户主体同名，个人类型须填写个人支付宝、企业类型须填写企业支付宝，个体工商户可填写个人或企业支付宝",
                "required": true
            },
            {
                "name": "merchant_type",
                "type": "radio",
                "label": "商户类型",
                "value": "06",
                "options": [
                    {
                        "label": "个人",
                        "value": "06"
                    },
                    {
                        "label": "个体工商户",
                        "value": "07"
                    },
                    {
                        "label": "企业",
                        "value": "01"
                    }
                ],
                "required": true
            },
            {
                "name": "cert_name",
                "type": "input",
                "label": "姓名",
                "placeholder": "",
                "show": "merchant_type=='06'",
                "required": true
            },
            {
                "name": "cert_no",
                "type": "input",
                "label": "身份证号码",
                "validator": "id",
                "placeholder": "",
                "show": "merchant_type=='06'",
                "required": true
            },
            {
                "name": "cert_image_back",
                "type": "image-upload",
                "label": "身份证国徽面照片",
                "filetype": "idcard_back",
                "show": "merchant_type=='06'&&service.indexOf('当面付')>=0",
                "tip": "个人类型商户使用当面付服务需要上传",
                "required": true
            },
            {
                "name": "license_image",
                "type": "image-upload",
                "label": "营业执照照片",
                "filetype": "business",
                "show": "merchant_type!='06'",
                "autofill": {
                    "license_no": "license_no",
                    "merchant_name": "name",
                    "legal_name": "legal_name"
                },
                "required": true
            },
            {
                "name": "license_no",
                "type": "input",
                "label": "营业执照编号",
                "placeholder": "上传营业执照后自动填入",
                "show": "merchant_type!='06'",
                "required": true
            },
            {
                "name": "merchant_name",
                "type": "input",
                "label": "营业执照名称",
                "placeholder": "上传营业执照后自动填入",
                "show": "merchant_type!='06'",
                "required": true
            },
            {
                "name": "legal_name",
                "type": "input",
                "label": "法人姓名",
                "placeholder": "",
                "show": "merchant_type!='06'",
                "required": true
            },
            {
                "name": "legal_cert_no",
                "type": "input",
                "label": "法人身份证号码",
                "validator": "id",
                "placeholder": "",
                "show": "merchant_type!='06'",
                "required": true
            }
        ],
        [
            {
                "name": "mcc",
                "type": "cascader",
                "label": "经营类目",
                "options": "${mcc}",
                "required": true
            },
            {
                "name": "alias_name",
                "type": "input",
                "label": "商户简称",
                "placeholder": "在支付账单页向买家展示",
                "required": true
            },
            {
                "name": "contact_name",
                "type": "input",
                "label": "商户联系人姓名",
                "placeholder": "",
                "required": true
            },
            {
                "name": "contact_phone",
                "type": "input",
                "label": "商户联系人手机号",
                "validator": "phone",
                "placeholder": "",
                "required": true
            },
            {
                "name": "business_city",
                "type": "inputcity",
                "label": "商户经营省市县",
                "required": true,
                "show": "service.indexOf('当面付')>=0",
                "allnode": true
            },
            {
                "name": "business_address",
                "type": "input",
                "label": "商户经营地址",
                "placeholder": "详细经营地址或人员所在地点",
                "show": "service.indexOf('当面付')>=0",
                "required": true
            },
            {
                "name": "out_door_images",
                "type": "image-upload",
                "label": "门头照",
                "filetype": "",
                "show": "service.indexOf('当面付')>=0",
                "tip": "使用当面付时必须上传",
                "required": true
            },
            {
                "name": "in_door_images",
                "type": "image-upload",
                "label": "店内环境照",
                "filetype": "",
                "show": "service.indexOf('当面付')>=0",
                "tip": "使用当面付时必须上传",
                "multiple": 3,
                "required": true
            },
            {
                "name": "site_url",
                "type": "input",
                "label": "站点地址",
                "validator": "uri",
                "placeholder": "填写你调用支付的网站网址",
                "show": "service.indexOf('电脑支付')>=0||service.indexOf('wap支付')>=0",
                "required": true
            },
            {
                "name": "site_name",
                "type": "input",
                "label": "站点名称/APP名称",
                "placeholder": "填写站点名称或APP名称",
                "show": "service.indexOf('电脑支付')>=0||service.indexOf('wap支付')>=0||service.indexOf('app支付')>=0",
                "required": true
            },
            {
                "name": "tiny_app_id",
                "type": "input",
                "label": "支付宝小程序AppId",
                "validator": "digits",
                "placeholder": "填写支付宝小程序AppId",
                "show": "service.indexOf('jsapi支付')>=0",
                "required": true
            }
        ],
        [
            {
                "name": "default_settle_type",
                "type": "radio",
                "label": "结算方式",
                "value": "alipayAccount",
                "options": [
                    {
                        "label": "结算到支付宝",
                        "value": "alipayAccount"
                    },
                    {
                        "label": "结算到银行卡",
                        "value": "bankCard",
                        "show": "merchant_type!='06'"
                    }
                ],
                "required": true
            },
            {
                "name": "alipay_logon_id",
                "type": "input",
                "label": "结算支付宝账号",
                "placeholder": "与商户主体同名，且已实名认证的支付宝",
                "note": "要求与商户主体同名，个人类型必须填写个人支付宝、企业类型须填写企业支付宝，个体工商户可填写个人或企业支付宝",
                "show": "default_settle_type=='alipayAccount'",
                "required": true
            },
            {
                "name": "account_holder_name",
                "type": "input",
                "label": "开户名称",
                "placeholder": "银行账户开户名称需与主体或法人一致",
                "show": "default_settle_type=='bankCard'",
                "required": true
            },
            {
                "name": "account_no",
                "type": "input",
                "label": "银行卡号",
                "placeholder": "只支持借记卡",
                "show": "default_settle_type=='bankCard'",
                "required": true
            },
            {
                "name": "bank_city_name",
                "type": "hidden",
                "label": "开户银行城市名称"
            },
            {
                "name": "account_inst_name",
                "type": "hidden",
                "label": "开户银行名称"
            },
            {
                "name": "account_inst_id",
                "type": "bank-select",
                "label": "开户银行",
                "placeholder": "请选择开户银行",
                "show": "default_settle_type=='bankCard'",
                "autofill": {
                    "account_inst_name": "text"
                },
                "required": true
            },
            {
                "name": "account_inst_address",
                "type": "cascader",
                "label": "开户银行省市",
                "options": "${city}",
                "show": "default_settle_type=='bankCard'",
                "autofill": {
                    "bank_city_name": "label"
                },
                "allnode": true,
                "required": true
            },
            {
                "name": "bank_branch_id",
                "type": "bank-branch-select",
                "label": "开户银行支行",
                "placeholder": "请选择支行",
                "show": "default_settle_type=='bankCard'",
                "param": {
                    "bank_code": "account_inst_id",
                    "city_code": "bank_city_name"
                },
                "required": true
            },
            {
                "name": "usage_type",
                "type": "radio",
                "label": "账号使用类型",
                "value": "01",
                "options": [
                    {
                        "label": "对公",
                        "value": "01"
                    },
                    {
                        "label": "对私",
                        "value": "02",
                        "show": "merchant_type=='07'"
                    }
                ],
                "show": "default_settle_type=='bankCard'",
                "required": true
            },
            {
                "name": "license_auth_letter_image",
                "type": "image-upload",
                "label": "授权函",
                "filetype": "",
                "show": "default_settle_type=='bankCard'&&merchant_type=='01'&&account_holder_name!=merchant_name",
                "note": "当营业执照名称与结算卡户名不一致时需要上传，<a href=\"https://gw.alipayobjects.com/os/bmw-prod/40974c1c-d346-4db0-971f-137d2e1eac34.docx\">授权函模板</a>"
            }
        ]
    ]
}