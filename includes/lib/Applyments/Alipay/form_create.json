{
    "steps": [
        "经营信息",
        "店铺信息",
        "签约信息"
    ],
    "items": [
        [
            {
                "name": "uid",
                "type": "input",
                "label": "绑定本站用户ID",
                "placeholder": "可留空"
            },
            {
                "name": "order_id",
                "type": "hidden",
                "label": "申请单编号"
            },
            {
                "name": "product",
                "type": "hidden",
                "label": "选择开通的产品",
                "value": "face"
            },
            {
                "name": "merchant_type",
                "type": "radio",
                "label": "商户类型",
                "value": "2",
                "options": [
                    {
                        "label": "个人",
                        "value": "1",
                        "tip": "个人进件有限额"
                    },
                    {
                        "label": "个体工商户",
                        "value": "2"
                    },
                    {
                        "label": "企业",
                        "value": "3"
                    }
                ],
                "required": true
            },
            {
                "name": "mcc",
                "type": "cascader",
                "label": "经营类目",
                "options": "${mcc}",
                "autofill": {
                    "need_special": "need_special"
                },
                "allnode": true,
                "required": true
            },
            {
                "name": "need_special",
                "type": "hidden",
                "value": false,
                "label": "是否特殊行业"
            },
            {
                "name": "special_license_pic",
                "type": "image-upload",
                "label": "特殊资质图片",
                "show": "need_special",
                "note": "需上传的特殊资质图片，可参考 <a href=\"https://opendocs.alipay.com/common/02khjv#%E5%95%86%E5%AE%B6%E7%BB%8F%E8%90%A5%E7%B1%BB%E7%9B%AE\" target=\"_blank\">商家经营类目</a> 中的“所需资质”",
                "required": true
            },
            {
                "name": "business_license_pic",
                "type": "image-upload",
                "label": "营业执照照片",
                "filetype": "business",
                "autofill": {
                    "business_license_no": "license_no",
                    "merchant_name": "name"
                },
                "show": "merchant_type>1",
                "required": true
            },
            {
                "name": "business_license_no",
                "type": "input",
                "label": "营业执照编号",
                "placeholder": "上传营业执照后自动填入",
                "show": "merchant_type>1",
                "required": true
            },
            {
                "name": "merchant_name",
                "type": "input",
                "label": "营业执照名称",
                "placeholder": "上传营业执照后自动填入",
                "show": "merchant_type>1",
                "required": true
            }
        ],
        [
            {
                "name": "shop_name",
                "type": "input",
                "label": "店铺名称",
                "show": "product=='face'",
                "required": true
            },
            {
                "name": "shop_address",
                "type": "inputcity",
                "label": "店铺所在省市县",
                "required": true,
                "show": "product=='face'",
                "allnode": true
            },
            {
                "name": "shop_address_detail",
                "type": "input",
                "label": "店铺详细地址",
                "placeholder": "请输入详细地址",
                "show": "product=='face'",
                "required": true
            },
            {
                "name": "shop_sign_board_pic",
                "type": "image-upload",
                "label": "店铺门头照片",
                "filetype": "",
                "show": "product=='face'",
                "required": true
            },
            {
                "name": "shop_scene_pic",
                "type": "image-upload",
                "label": "店铺内景照片",
                "filetype": "",
                "show": "product=='face'",
                "required": true
            }
        ],
        [
            {
                "name": "alipay_account",
                "type": "input",
                "label": "签约支付宝账号",
                "placeholder": "填写你的支付宝账号",
                "note": "企业类型商户只能填写企业支付宝，个体工商户可填写个人或企业支付宝",
                "required": true
            },
            {
                "name": "rate",
                "type": "input",
                "label": "服务费率(%)",
                "validator": "numeric",
                "min": "0.38",
                "max": "0.6",
                "placeholder": "仅能填入2位以内小数，且在0.38~0.6范围内"
            },
            {
                "name": "contact_name",
                "type": "input",
                "label": "联系人姓名",
                "placeholder": "",
                "required": true
            },
            {
                "name": "contact_mobile",
                "type": "input",
                "label": "联系人手机号",
                "validator": "phone",
                "placeholder": "",
                "required": true
            },
            {
                "name": "contact_email",
                "type": "input",
                "label": "联系人邮箱",
                "validator": "email",
                "placeholder": ""
            }
        ]
    ]
}